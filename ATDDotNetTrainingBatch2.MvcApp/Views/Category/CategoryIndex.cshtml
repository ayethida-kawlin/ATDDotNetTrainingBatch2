@section scripts{
    <script>
        // console.log("section scripts hello");
        loadData();
        function loadData(){
            $.ajax({
                url: "/Category/List",
                type:"GET",
                success: function (response){
                    console.log({response});
                    
                    let trRow = '';
                    
                    for (let i=0; i < response.length; i++){
                        let row = `<tr>
                                <td>
                                    <a href="/category/edit/${response[i].CategoryId}" class="btn btn-outline-warning">Edit</a>
                                </td>
                                <td>${i + 1}</td>
                                <td>${response[i].CategoryId}</td>
                                <td>${response[i].CategoryCode}</td>
                                <td>${response[i].CategoryName}</td>
                            </tr>`;
                            trRow += row;                         
                    }
                    $('#tbData').html(trRow);
                },
                error: function(request, status, error){
                    alert(request.responseText);
                }
            });
        }
    </script>
}
